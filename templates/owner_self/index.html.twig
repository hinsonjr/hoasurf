{% extends 'owner-base.html.twig' %}

{% block title %}Owner Dashboard{% endblock %}

    {%  block content %}
    {{  parent() }}
        <h1>Owner Dashboard for {{ app.user.name }}</h1>
        <div class="section-break">&nbsp;</div>
        
        <div class="container">
            <div class="row">
                <div class="col-sm card">
                    <div class=card-header>Messages</div>
                    <div class="cardlist-body">
                        {% for message in owner_messages %}
                        <div class="row">
                            <div class="col">{{ message.subject }}</div>
                            <div class="col">{{ message.createdAt|date("Y-m-d") }}</div>
                            <div class="col"><a role="button" class-="btn btn-primary" href="{{ path('app_message_new', ['parent',message.id]) }}">Reply</a></div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="col-sm card">
                    <div class=card-header>Payment Info</div>
                    <div class="cardlist-body">
                        <div class="row">
                            <div class="col bold">Unit</div>
                            <div class="col bold">Type</div>
                            <div class="col bold">Due Date</div>
                            <div class="col bold">Amount</div>
                        </div>
                       {% for unitNumber, invoices in invoice_records %}
                           <div class='row'>
                           {% for invoice in invoices %}
                                <div class='col'>Unit {{ unitNumber }}</div>
                                <div class="col">{{ invoice.type }}</div>
                                <div class="col">{{ invoice.dueDate|date("y-m-d") }}</div>
                                <div class="col">{{ invoice.amount }}</div>
                            {%  endfor %}
                           </div>
                       {% endfor %}
                    </div>
                </div>
                <div class="col-sm card">
                    <div class=card-header>Service Requests<</div>
                    <div class="cardlist-body">
                        {% for request in requests %}
                        <div class="row">
                            <div class="col">{{ request.status }}</div>
                            <div class="col">{{ request.subject }}</div>
                            <div class="col">{{ request.createdDate|date("Y-m-d") }}</div>
                        </div>
                        {% endfor %}
                    </div>
                </div>                    
            </div>

            <div class="section-break">&nbsp;</div>
            <div class="owner-table card">
                <div class="card-header">
                    Units Owned
                </div>
                <div class="row card-subtitle cardlist-heading">
                    <div class="col">Unit</div>
                    <div class="col">Building</div>
                    <div class="col">Purchase Date</div>
                    <div class="col">Sold Date</div>
                    <div class="col">Ownership %</div>
                </div>
                <div class="card-body cardlist-body">
                    {% for owner in owner_records %}
                        <div class="row">
                            <div class="col">{{ owner.unit.unitNumber }}</div>
                            <div class="col">{{ owner.unit.building.name }}</div>
                            <div class="col">{{ owner.startDate | date("Y-m-d") }}</div>
                            {% if owner.endDate is not null  %}
                            <div class="col">{{ owner.endDate | date("Y-m-d") }}</div>
                            {% else %}
                            <div class="col">Current Owner</div>
                            {% endif %}
                            <div class="col">{{ owner.ownPercent }}%</div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
{% endblock %}
