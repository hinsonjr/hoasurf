{% extends 'admin-base.html.twig' %}

{% block title %}MessageType index{% endblock %}

{% block body %}
    {{ parent() }}    
    <h1>MessageType index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for message_type in message_types %}
            <tr>
                <td>{{ message_type.id }}</td>
                <td>{{ message_type.type }}</td>
                <td>
                    <a href="{{ path('app_message_type_show', {'id': message_type.id}) }}">show</a>
                    <a href="{{ path('app_message_type_edit', {'id': message_type.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_message_type_new') }}">Create new</a>
{% endblock %}
