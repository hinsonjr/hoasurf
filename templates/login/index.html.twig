{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block content %}

    <div class="container">
        {% if error %}
        <div class="row">
            <div class="col-md-10 ml-md-auto">
                <span class="label label-warning">
                {{ error.messageKey|trans(error.messageData, 'security') }}
                </span>
            </div>
        </div>
        {% endif %}
        <div class="row">
            <div class="col-md-10 ml-md-auto">
                <div class="card bg-light mb-3 mt-5" style="width: 800px">
                    <div class="card-body">
                        <div class="card-header mb-3">Login Form</div> 
                        <form action="{{ path('login') }}" method="post">
                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >                            
                            <div class="form_group">
                                <div class="col-md-12 mb-3">
                                    <label for="username">Email:</label>
                                    <input class="form-control" type="text" id="username" name="email" value="{{ last_username }}"/>
                                </div>
                            </div>
                            <div class="form_group">
                                <div class="col-md-12 mb-3">
                                    <label for="password">Password:</label>
                                    <input class="form-control" type="password" id="password" name="password"/>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-8 col-md-offset-4" style="margin-top:5px;">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fa fa-btn fa-user"></i> Login
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
