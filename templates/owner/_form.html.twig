{{ form_start(form) }}
    <div class="my-custom-class-for-errors">
        {{ form_errors(form) }}
    </div>

    <div class="row">
        <div class="col">
            {{ form_row(form.name) }}
        </div>
        <div class="col" id="some-custom-id">
            {{ form_row(form.unit) }}
        </div>
        <div class="col" id="some-custom-id">
            {{ form_row(form.ownPercent) }}
        </div>    </div>
    <div class="row">
        <div class="col" id="some-custom-id">
            {{ form_row(form.startDate) }}
        </div>
        <div class="col" id="some-custom-id">
            {{ form_row(form.endDate) }}
        </div>
    </div>
    <div class="row">
        <div class="col" id="some-custom-id">
            {{ form_row(form.address) }}
        </div>
        <div class="col" id="some-custom-id">
            {{ form_row(form.address2) }}
        </div>
    </div>
    <div class="row">
        <div class="col" id="some-custom-id">
            {{ form_row(form.city) }}
        </div>
        <div class="col" id="some-custom-id">
            {{ form_row(form.state) }}
        </div>
        <div class="col" id="some-custom-id">
            {{ form_row(form.zip) }}
        </div>
        <div class="col" id="some-custom-id">
            {{ form_row(form.country) }}
        </div>        
    </div>
    <div class="row">
        <div class="col" id="some-custom-id">
            {{ form_row(form.email) }}
        </div>
        <div class="col" id="some-custom-id">
            {{ form_row(form.phone) }}
        </div>
    </div>
    <button class="btn">{{ button_label|default('Save') }}</button>
