{{ form_start(form) }}
    
    <div class="row">
           <div class="col-sm">
            {{ form_row(form.name) }}
           </div>        
           <div class="col-sm">
            {{ form_row(form.startDate) }}
           </div>        
           <div class="col-sm">
            {{ form_row(form.endDate) }}
           </div>        
        </div>
        <div class="row">
           <div class="col-sm">
                {{ form_row(form.address) }}
           </div>        
        </div>
        <div class="row">
           <div class="col-sm">
                {{ form_row(form.address2) }}
           </div>        
        </div>
        <div class="row">
           <div class="col-sm">
                {{ form_row(form.city) }}
           </div>        
           <div class="col-sm">
                {{ form_row(form.state) }}
           </div>        
           <div class="col-sm">
                {{ form_row(form.zip) }}
           </div>        
        </div>
        <div class="row">
           <div class="col-sm">
            {{ form_row(form.phone) }}            
           </div>        
           <div class="col-sm">
                {{ form_row(form.email) }}
           </div>        
        </div>
            {%  if owner.unitOwner|length > 0 %}
        <div class="row">
            <label >Units Owned</label>
            <div class="col-sm-1">
                <label >Unit</label>
            </div>
            <div class="col-sm-2">
                <label >Purchase Date</label>
            </div>
            <div class="col-sm-2">
                <label >Sold Date</label>
            </div>
        </div>
        <div class="row">
                {% for ou in owner.unitOwner %}
                <div class="col-sm-1">
                    {{ ou.unit.unitNumber }}
                </div>
                <div class="col-sm-2">
                    {{ ou.startDate|date('Y-m-d')}}
                </div>
                <div class="col-sm-2">
                    {{ ou.endDate|date('Y-m-d')}}
                </div>
                {% endfor %}
        </div>
            {% endif %}
        <div  class="row ">
            <div class="col-sm-3">&nbsp;</div>
            <button class="col-sm-2 btn btn-primary" type="submit">Submit</button>
        </div>
        <a href="{{ path('app_owner_index') }}">back to list</a>            
{{ form_end(form) }}
