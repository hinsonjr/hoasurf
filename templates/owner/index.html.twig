{% extends 'admin-base.html.twig' %}

{% block title %}Owner index{% endblock %}

{% block content %}
    <h1>Owner index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Unit(s)</th>
                <th>City</th>
                <th>State</th>
                <th>Zip</th>
                <th>Phone</th>
                <th>Country</th>
                <th>OwnPercent</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for owner in owners %}
            <tr>
                <td><a href="{{ path('app_owner_edit', {'id': owner.id}) }}">{{ owner.name }}</a></td>
                <td>
                {% for ou in owner.ownerUnits %}
                    <div class="row">
                        <div class="col">{{ ou.unit.unitNumber }}</div>
                        <div class="col">{{ ou.startDate ? owner.startDate|date('m/d/y') : '' }}{{ ou.endDate ? '- ' ~ owner.endDate|date('m/d/y') : '' }}</div>
                    </div>
                {%  endfor %}
                </td>
                <td>{{ owner.city }}</td>
                <td>{{ owner.state }}</td>
                <td>{{ owner.zip }}</td>
                <td>{{ owner.phone }}</td>
                <td>{{ owner.country }}</td>
                <td>{{ owner.ownPercent }}</td>
                <td>{{ owner.email }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_owner_new') }}">Create new</a>
{% endblock %}
