{% extends 'admin-base.html.twig' %}

{% block title %}Owner index{% endblock %}

{% block content %}
    <h1>Owner index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>StartDate</th>
                <th>EndDate</th>
                <th>Address</th>
                <th>Address2</th>
                <th>City</th>
                <th>State</th>
                <th>Zip</th>
                <th>Phone</th>
                <th>Country</th>
                <th>OwnPercent</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for owner in owners %}
            <tr>
                <td>{{ owner.id }}</td>
                <td>{{ owner.name }}</td>
                <td>{{ owner.startDate ? owner.startDate|date('Y-m-d') : '' }}</td>
                <td>{{ owner.endDate ? owner.endDate|date('Y-m-d') : '' }}</td>
                <td>{{ owner.address }}</td>
                <td>{{ owner.address2 }}</td>
                <td>{{ owner.city }}</td>
                <td>{{ owner.state }}</td>
                <td>{{ owner.zip }}</td>
                <td>{{ owner.phone }}</td>
                <td>{{ owner.country }}</td>
                <td>{{ owner.ownPercent }}</td>
                <td>{{ owner.email }}</td>
                <td>
                    <a href="{{ path('app_owner_show', {'id': owner.id}) }}">show</a>
                    <a href="{{ path('app_owner_edit', {'id': owner.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_owner_new') }}">Create new</a>
{% endblock %}
