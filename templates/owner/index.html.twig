{% extends 'admin-base.html.twig' %}

{% block title %}Owner index{% endblock %}

{% block content %}
    <h1>Owner index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>StartDate</th>
                <th>Unit</th>
                <th>EndData</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for owner in owners %}
            <tr>
                <td>{{ owner.id }}</td>
                <td>{{ owner.firstname }}</td>
                <td>{{ owner.lastname }}</td>
                <td>{{ owner.units }}</td>
                <td>{{ owner.startDate ? owner.startDate|date('Y-m-d') : '' }}</td>
                <td>{{ owner.endDate ? owner.endDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('owner_show', {'id': owner.id}) }}">show</a>
                    <a href="{{ path('owner_edit', {'id': owner.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('owner_new') }}">Create new</a>
{% endblock %}
