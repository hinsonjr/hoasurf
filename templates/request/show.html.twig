{% extends 'admin-base.html.twig' %}

{% block title %}Request{% endblock %}

{% block content %}
    <h1>Request</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ request.id }}</td>
            </tr>
            <tr>
                <th>CreatedDate</th>
                <td>{{ request.createdDate ? request.createdDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CompletedDate</th>
                <td>{{ request.completedDate ? request.completedDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Notes</th>
                <td>{{ request.notes }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_request_index') }}">back to list</a>

    <a href="{{ path('app_request_edit', {'id': request.id}) }}">edit</a>

    {{ include('request/_delete_form.html.twig') }}
{% endblock %}
