{% extends 'admin-base.html.twig' %}

{% block title %}Request{% endblock %}

{% block content %}
    <h1>Request</h1>

   <div class="row">
       <label class="col-sm-2 field-label">
           HOA
       </label>
       <div class="col-sm-10">
        {{ request.hoa }}
       </div>        
    </div>
    <div class="row">
       <label class="col-sm-2 field-label">
           Subject
       </label>        
       <div class="col-sm-10">
        {{ request.subject }}
       </div>        
    </div>
    <div class="row">
       <label class="col-sm-2 field-label">
           Type
       </label>        
       <div class="col-sm-2">
        {{ request.type }}
       </div>        
       <label class="col-sm-2 field-label">
           Status
       </label>        
       <div class="col-sm-2">
        {{ request.status }}
       </div>        
    </div>
    <div class="row">
       <label class="col-sm-2 field-label">
           Created By
       </label>          
       <div class="col-sm-2">
        {{ request.createdBy }}
       </div>        
       <label class="col-sm-2 field-label">
           Completed By
       </label>
       <div class="col-sm-2">
        {{ request.completedBy }}
       </div>
    </div>
    <div class="row">
       <label class="col-sm-2 field-label">
           Assigned To
       </label>  
       <div class="col-sm-2">
        {{ request.assignedTo }}
       </div>        
    </div>
    <div class="row">
       <label class="col-sm-2 field-label">
           Building
       </label>  
       <div class="col-sm-2">
        {{ request.building }}
       </div>        
       <label class="col-sm-2 field-label">
           Unit
       </label>  
       <div class="col-sm-2">
        {{ request.unit }}
       </div>        
       <label class="col-sm-2 field-label">
           Vendor
       </label>  
       <div class="col-sm-2">
        {{ request.vendor }}
       </div>        
    </div>
       <br>
       <h3>Notes</h3>
        <div class="row">
            <div class="col-sm-2 field-label">
                Created By
            </div>        
            <div class="col-sm-2 field-label">
                Created At
            </div>        
            <div class="col-sm-6 field-label">
                Note
            </div>        
         </div>
        {% for note in request.notes %}
            <div class="row">
               <div class="col-sm-2">
                {{ note.addedBy }}
               </div>        
               <div class="col-sm-2">
                {{ note.date|date("Y-m-d") }}
               </div>        
               <div class="col-sm-6">
                {{ note.note }}
               </div>        
            </div>
        {%  endfor %}
    <a href="{{ path('app_request_index') }}">back to list</a>

    <a href="{{ path('app_request_edit', {'id': request.id}) }}">edit</a>

    {{ include('request/_delete_form.html.twig') }}
{% endblock %}
