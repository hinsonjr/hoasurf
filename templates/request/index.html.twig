{% extends 'admin-base.html.twig' %}

{% block title %}Request index{% endblock %}

{% block content %}
    <h1>Request List</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CreatedDate</th>
                <th>CompletedDate</th>
                <th>Notes</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for request in requests %}
            <tr>
                <td>{{ request.id }}</td>
                <td>{{ request.createdDate ? request.createdDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ request.completedDate ? request.completedDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <table>
                        <tbody>
            {% for note in request.notes %}
                            <tr>
                                <td>{{ note.date|date("Y-m-d H:i:s")}}</td>
                                <td>{{ note.addedBy }}</td>
                                <td>{{ note.note }}</td>
                            </tr>
            {% endfor %}
                        </tbody>
                    </table>
                </td>
                <td>
                    <a href="{{ path('app_request_show', {'id': request.id}) }}">show</a>
                    <a href="{{ path('app_request_edit', {'id': request.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_request_new') }}">Create new</a>
{% endblock %}
