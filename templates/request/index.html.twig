{% extends 'admin-base.html.twig' %}

{% block title %}Request index{% endblock %}

{% block content %}
    <h1>Request List</h1>
    <h3>Filters</h3>
    <form action="{{ path('app_request_index') }}" name="requestFilterForm">
        <div class="row">
            <div class="col-sm-2">Filter By Type</div>
            <div class="col-sm-2">Filter By status</div>
        </div>
        <div class="row">
             <div class="col-sm-2">
                <select class="form-control" name="type">
                    <option value="0">&lt;choose&gt;</option>
                    {% for type in typeList %}
                    <option value="{{ type.id }}" {{ type.id == filters['type'] ? "selected" : "" }}>{{ type.type }} </option>
                    {%  endfor %}
                </select>
             </div>
            <div class="col-sm-2">
                <select class="form-control" name="status">
                    <option value="0">&lt;choose&gt;</option>
                    {% for status in statusList %}
                    <option value="{{ status.id }}" {{ status.id == filters['status'] ? "selected" : "" }}>{{ status.status }}</option>
                    {%  endfor %}
                </select>
            </div>
            <div class="col-sm-2">
                <button class="btn btn-primary" type="submit">Filter</button>
            </div>
        </div>
    </form>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Status</th>
                <th>CreatedDate</th>
                <th>CompletedDate</th>
                <th>Notes</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for request in requests %}
            <tr>
                <td>{{ request.id }}</td>
                <td>{{ request.type? request.type }}</td>
                <td>{{ request.status? request.status }}</td>
                <td>{{ request.createdDate ? request.createdDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ request.completedDate ? request.completedDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <table>
                        <tbody>
            {% for note in request.notes %}
                            <tr>
                                <td>@{{ note.date|date("m/d H:i")}}</td>
                                <td>#{{ note.addedBy }}</td>
                                <td>- {{ note.note }}</td>
                            </tr>
            {% endfor %}
                        </tbody>
                    </table>
                </td>
                <td>
                    <a href="{{ path('app_request_show', {'id': request.id}) }}">show</a>
                    <a href="{{ path('app_request_edit', {'id': request.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_request_new') }}">Create new</a>
{% endblock %}
