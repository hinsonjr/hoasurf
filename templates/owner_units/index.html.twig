{% extends "admin-base.html.twig' %}

{% block title %}Owner Units List{% endblock %}

{% block content%}
    {{  parent() }}
    <h1>Owner Units List</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>StartDate</th>
                <th>EndDate</th>
                <th>OwnPercent</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for owner_unit in owner_units %}
            <tr>
                <td>{{ owner_unit.id }}</td>
                <td>{{ owner_unit.startDate ? owner_unit.startDate|date('Y-m-d') : '' }}</td>
                <td>{{ owner_unit.endDate ? owner_unit.endDate|date('Y-m-d') : '' }}</td>
                <td>{{ owner_unit.ownPercent }}</td>
                <td>
                    <a href="{{ path('app_owner_units_show', {'id': owner_unit.id}) }}">show</a>
                    <a href="{{ path('app_owner_units_edit', {'id': owner_unit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_owner_units_new') }}">Create new</a>
{% endblock %}
