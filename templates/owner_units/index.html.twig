{% extends "admin-base.html.twig' %}

{% block title %}Owner Units List{% endblock %}

{% block content%}
    {{  parent() }}
    <h1>Owner Units List</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>StartDate</th>
                <th>EndDate</th>
                <th>OwnPercent</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for unit_owner in unit_owners %}
            <tr>
                <td>{{ unit_owner.id }}</td>
                <td>{{ unit_owner.startDate ? unit_owner.startDate|date('Y-m-d') : '' }}</td>
                <td>{{ unit_owner.endDate ? unit_owner.endDate|date('Y-m-d') : '' }}</td>
                <td>{{ unit_owner.ownPercent }}</td>
                <td>
                    <a href="{{ path('app_unit_owners_show', {'id': unit_owner.id}) }}">show</a>
                    <a href="{{ path('app_unit_owners_edit', {'id': unit_owner.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_unit_owners_new') }}">Create new</a>
{% endblock %}
