{# templates/admin-base.html.twig #}
<!DOCTYPE html>
<html>
    <head>
        {% block head %}
            <meta charset="UTF-8">
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <title>{% block title %}Hoa Surf!{% endblock %}</title>
            <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
            {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
            {% block stylesheets %}
                <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
                {{ encore_entry_link_tags('admin') }}
            {% endblock %}

            {% block javascripts %}
                <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
                <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js" integrity="sha384-cuYeSxntonz0PPNlHhBs68uyIAVpIIOZZ5JqeqvYYIcEL727kskC66kF92t6Xl2V" crossorigin="anonymous"></script>
                {{ encore_entry_script_tags('admin') }}
            {% endblock %}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <div class="banner">
                <div class="banner-container">
                    <div class="container-body">
                        <nav id="navbar" class="navbar navbar-expand-lg navbar-light" style="background-color: #e3f2fd;">
                            <a class="navbar-brand">SurfHOA</a>
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#acctMenu" aria-controls="acctMenu" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>                
                            {% block navbar %}
                            <div class="collapse navbar-collapse" id="acctMenu">
                                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                {% block navitems %}
                                    <li class="nav-item">
                                        <a class="nav-link" href="{{ path('accounting_dash') }}">Accounting Dash</a><span class="sr-only"></span></a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-item nav-link" href="{{  path('accounting_transaction_index') }}" >Transactions</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-item nav-link" href="{{  path('accounting_ledger_account_index') }}" >Accounts</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-item nav-link" href="{{  path('accounting_ledger_type_index') }}" >Types</a>                                
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-item nav-link" href="{{ path('app_owner_index') }}">Owners</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-item nav-link" href="{{ path('unit_index') }}">Units</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-item nav-link" href="{{ path('vendor_index') }}">Vendors</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-item nav-link" href="{{ path('maintenance_object_index') }}">Maintenance</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-item nav-link" href="{{ path('admin_dash') }}">Admin Dash</a><span class="sr-only"></span></a>
                                    </li>
                                  
                                {% endblock %}
                                    <li class="nav-item dropdown ">
                                        <a class="nav-link dropdown-toggle " href="#" role="button" data-bs-toggle="dropdown" aria-expanded="true">
                                          User
                                        </a>
                                        <ul class="dropdown-menu dropdown-menu-right justify-content-right">
                                            <li><a class="dropdown-item " >{{ app.user.email }}</a></li>
                                            <li><a class="dropdown-item " >{{ app.user.roles[0] }}</a></li>
                                            <li><a class="dropdown-item " href="/logout">Logout</a></li>
                                        </ul>
                                    </li>
                                </ul>
                            </div>
                            {% endblock %}
                        </nav>
                    </div>
                </div>

            <div id="content">
                {% block content %}{% endblock %}
            </div>
        {% endblock %}
    </body>
</html>
