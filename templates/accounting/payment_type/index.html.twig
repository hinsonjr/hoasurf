{% extends 'acct-base.html.twig' %}

{% block title %}Payment Type List{% endblock %}

{% block content  %}
    {{  parent() }}    
    <h1>Payment Type List</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for payment_type in payment_types %}
            <tr>
                <td>{{ payment_type.id }}</td>
                <td>{{ payment_type.type }}</td>
                <td>
                    <a href="{{ path('app_accounting_payment_type_show', {'id': payment_type.id}) }}">show</a>
                    <a href="{{ path('app_accounting_payment_type_edit', {'id': payment_type.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_accounting_payment_type_new') }}">Create new</a>
{% endblock %}
