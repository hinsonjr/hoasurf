{% extends 'admin-base.html.twig' %}

{% block title %}Transaction{% endblock %}

{% block content %}
    <h1>Transaction</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ transaction.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ transaction.date ? transaction.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ transaction.amount }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('accounting_transaction_index') }}">back to list</a>

    <a href="{{ path('accounting_transaction_edit', {'id': transaction.id}) }}">edit</a>

    {{ include('accounting/transaction/_delete_form.html.twig') }}
{% endblock %}
