{% extends 'admin-base.html.twig' %}

{% block title %}LedgerAccount{% endblock %}

{% block content %}
    <h1>LedgerAccount</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ledger_account.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ ledger_account.name }}</td>
            </tr>
            <tr>
                <th>Balance</th>
                <td>{{ ledger_account.balance }}</td>
            </tr>
            <tr>
                <th>StartBalance</th>
                <td>{{ ledger_account.startBalance }}</td>
            </tr>
            <tr>
                <th>Debit Transactions</th>
                <td>
                    <table id="accountDebits">
                        <thead>
                            <tr><th>Date</th><th>Amount</th><th>Debit Account</th></tr>
                        </thead>
                        <tbody>
                        {% for transaction in ledger_account.debitTransactions %}
                            <tr>
                                <td>{{ transaction.date|date("Y/m/d")}}</td>
                                <td>{{ transaction.amount}}</td>
                                <td>{{ transaction.creditAccount}}</td>
                            </tr>
                        {%  endfor %}
                        <tbody>
                    </table>
                </td>
            </tr>
            <tr>
                <th>Credit Transactions</th>
                <td>
                    <table id="accountCredits">
                        <thead>
                            <tr><th>Date</th><th>Amount</th><th>Debit Account</th></tr>
                        </thead>
                        <tbody>
                        {% for transaction in ledger_account.creditTransactions %}
                            <tr>
                                <td>{{ transaction.date|date("Y/m/d")}}</td>
                                <td>{{ transaction.amount}}</td>
                                <td>{{ transaction.debitAccount}}</td>
                            </tr>
                        {%  endfor %}
                        <tbody>
                    </table>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('accounting_ledger_account_index') }}">back to list</a>

    <a href="{{ path('accounting_ledger_account_edit', {'id': ledger_account.id}) }}">edit</a>

    {{ include('accounting/ledger_account/_delete_form.html.twig') }}
{% endblock %}
