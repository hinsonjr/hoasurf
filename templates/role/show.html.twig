{% extends 'admin-base.html.twig' %}

{% block title %}Role{% endblock %}

{% block content %}
    <h1>Role</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ role.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ role.name }}</td>
            </tr>
            <tr>
                <th>RoleName</th>
                <td>{{ role.roleName }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ role.status ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('role_index') }}">back to list</a>

    <a href="{{ path('role_edit', {'id': role.id}) }}">edit</a>

    {{ include('role/_delete_form.html.twig') }}
{% endblock %}
